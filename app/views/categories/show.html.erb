	<h2><%= @category.name %></h2>
<div id='posts-index'>
  <% if @posts.exists? %>
    <% @posts.each_slice(2) do |post| %>
      <div class='row'>
      <% @posts.each do |post| %>
        <div class='col-md-6'>
          <div class='post'>
          <%= image_tag post.image.url, width:'100%', height:'200px' %>
            <div class='post-content'>
            <h3><%= post.title.truncate(30) %></h3>
              <small>Posted by <%= post.user.name %> on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
              <%= raw post.body.truncate(200) %>
              <%= link_to 'Read more', post_path(post), class:'button btm-primary'%>
            </div><!-- post-content -->
          </div><!-- post -->
        </div><!-- col-md-6 -->
      <% end %>  
      </div><!-- row -->
    <% end %>
  <% else %>
  <p>No post in this category yet</p>
  <% end %>
</div><!-- posts-index -->
