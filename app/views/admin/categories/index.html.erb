     <h2 class='page-header'>Manage categories 
	<%= link_to 'Create New', new_admin_category_path, class:'btn btn-success pull-right' %></h2>
      
      <% if @categories.exists? %> 

    <table class='table table-striped'>
      <tr>
        <th>Catgeory title</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      <% @categories.each do |category| %>
      <tr>
      <td><%= category.name %></td>
      <td><%= category.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
      <td><%= link_to 'Edit', edit_admin_category_path(category), class:'btn btn-primary' %> | <%= link_to 'Delete', admin_category_path(category), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
      <table>
   <%= will_paginate @categories %>
    <% else %>
    <P> There are not categories</P>
   <% end %>