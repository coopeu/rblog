

<%= form_tag admin_sessions_path, :class => 'form-signin' do %>
	<h2 class='form-signin-heading'>rBlog</h2>

<!-- Alerts & Messages -->
	<% if flash[:notice] %>
		<div class='alert alert-success'>
			<%= flash[:notice] %></div>
	<% end %>
	<% if flash[:alert] %>
		<div class='alert alert-success'>
			<%= flash[:alert] %></div>
	<% end %>

	<!-- main form -->
		<%= text_field_tag :email, params[:email], class:'form-control', placeholder:'Email' %><br />
		<%= password_field_tag :password, '', class:'form-control', placeholder:'Password' %><br />

	<%= submit_tag 'Submit', class:'btn btn-lg btn-primary btn-block' %>
	
<% end %>