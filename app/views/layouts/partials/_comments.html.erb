<div class="comments">
	<h2 class='page-header'><%= @post.comments.length %> Comments</h2>
	<% @post.comments.each do |comment| %>
	<div class="comment">
		<div class='row'>
			<div class='col-md-2'>
			<%= image_tag('user1.png') %>
			</div>
			<div class='col-md-10'>
				<div class='well'>
					<h4><%= comment.name %><span> on 
					<%= comment.created_at.to_time.strftime('%B %e at %l:%M %p')%></span></h4>
					<%= comment.body %>
				</div><!-- well -->	
			</div><!-- col-md-10 -->
		</div><!-- row -->    
  	</div><!-- comment -->
  	<%end%>

  	<div class='well add-comment'>
  		<h2 class='page-header'>Add comment</h2>
  		<%= form_for([@post, @post.comments.build]) do |f| %>
  			<!-- # {action: "create"} @post.comments.build]) do |f| %> -->
	<!-- main form -->
	<div class='form-group'>
		<%= f.label :name %><br />
		<%= f.text_field :name, class:'form-control' %>
	</div>
	<div class='form-group'>
		<%= f.label :body %><br />
		<%= f.text_area :body, class:'form-control' %>
	</div>
	<div class='form-group'>
	<%= f.submit 'Submit', class:'btn btn-primary' %>
	</div>
		<% end %>
  	</div><!-- well add-comment -->
  	<%= link_to 'Back', posts_path, class:"btn btn-secundary right" %>  
 </div><!-- comments -->