<div class='well post-single'>
	<h2 class='page-header'><%= @post.title %></h2>
	<small>Posted by <%#= @users.find(@post.user_id).name %> on <%#= @post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
	<small>Posted by <%= @post.user.name %> on <%= @post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
    <%= image_tag @post.image.url, width:'100%'  %>
        <%= raw @post.body %>
</div>

<%# = render 'layouts/partials/comments' %>


<style type="text/css" scoped> 
h1,
h2 {
  text-align: center;
  background-color: #2A4550;
  color: white;
  margin: 0;
  padding: 24px;
}
. . .
#article_text,
textarea {
  height: 6rem;
}
</style>


<div class="container">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>   
  <p>
    <strong>Text:</strong>
    <%= @post.body %>
  </p>
</div>
<div class ="container">
  <h2>Comments</h2>
  <% @post.comments.each do |comment| %>
    <p>
      <strong>Name:</strong>
      <%= comment.name %>
    </p>
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>
</div>
<div class="container">
  <h2>Add Comment</h2>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "Create Comment", :id => "save-button" %>
    </p>
  <% end %>
</div>
<%= link_to 'Back', posts_path, class: "big button" %>  
  

  

  

  
  


 
  

    

    
  


 
  

    

    
  


 
  

    
  


